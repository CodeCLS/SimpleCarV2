<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_1">

    <EditText
        android:id="@+id/input_additional_info_phone_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_view_height"
        android:hint="@string/telephone_number"
        android:inputType="phone"
        android:paddingStart="@dimen/margin_regular"
        android:background="@drawable/background_input_view"
        app:layout_constraintBottom_toTopOf="@+id/input_additional_info_email_fragment_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/margin_1"

        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/input_additional_info_email_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_view_height"
        android:hint="@string/email"
        android:inputType="textEmailAddress"

        android:paddingStart="@dimen/margin_regular"
        android:background="@drawable/background_input_view"
        android:layout_marginBottom="@dimen/margin_1"

        app:layout_constraintBottom_toTopOf="@+id/input_additional_info_first_name_fragment_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/input_additional_info_phone_fragment_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/input_additional_info_first_name_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_view_height"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/margin_regular"
        android:background="@drawable/background_input_view"
        app:layout_constraintBottom_toTopOf="@+id/input_additional_info_second_name_fragment_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_1"

        app:layout_constraintTop_toBottomOf="@+id/input_additional_info_email_fragment_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/input_additional_info_second_name_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_view_height"
        android:hint="@string/second_name"
        android:inputType="textPersonName"

        android:paddingStart="@dimen/margin_regular"
        android:background="@drawable/background_input_view"
        android:layout_marginBottom="@dimen/margin_1"

        app:layout_constraintBottom_toTopOf="@+id/button_additional_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/input_additional_info_first_name_fragment_view"
        app:layout_constraintVertical_chainStyle="packed" />


    <cls.android.simplecar.views.StandardButton
        android:id="@+id/button_additional_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_additional_info_second_name_fragment_view"
        app:standard_btn_icon="@drawable/ic_walking"
        app:standard_btn_text="Continue" />


</androidx.constraintlayout.widget.ConstraintLayout>