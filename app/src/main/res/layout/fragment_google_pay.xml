<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cls.android.simplecar.views.StandardButton
        android:id="@+id/btn_pay_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_1"
        app:layout_constraintBottom_toTopOf="@+id/btn_pay_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:standard_btn_icon="@drawable/ic_car"
        app:standard_btn_text="Basic Tier" />

    <cls.android.simplecar.views.StandardButton
        android:id="@+id/btn_pay_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pay_basic"
        app:standard_btn_icon="@drawable/ic_car"
        app:standard_btn_text="Pro Tier" />

</androidx.constraintlayout.widget.ConstraintLayout>