<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slider_item_fragment_img"
        android:layout_width="@dimen/img_size_large"
        android:layout_height="@dimen/img_size_large"
        app:layout_constraintBottom_toTopOf="@+id/slider_item_fragment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_2"
        android:src="@drawable/ic_location_pin"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/slider_item_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/slider_item_fragment_desc"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"

        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="@dimen/margin_2"
        android:textSize="@dimen/text_size_6"
        android:text="Location"
        android:fontFamily="@font/montserrat_medium"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_item_fragment_img" />

    <TextView
        android:id="@+id/slider_item_fragment_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_1"
        android:layout_margin="@dimen/margin_regular"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="Find the location of your car"

        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_item_fragment_title" />

    <cls.simplecar.views.StandardButton
        android:id="@+id/slider_item_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:standard_btn_text="Continue"
        app:standard_btn_icon="@drawable/ic_walking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_regular" />
</androidx.constraintlayout.widget.ConstraintLayout>